.remote
  = simple_form_for(@mandrill_email, :html => one_submit_only(:mandrill_email), :remote => true) do |f|
    = link_to_close edit_contact_group_path(@mandrill_email)
    = f.hidden_field :user_id

    = f.error_messages :object_name => t('mandrill_email')

    = render "mandrill_emails/top_section",  :f => f, :edit => true
    -#= render "contact_groups/contact_info", :f => f, :edit => true
    -#= render "fields/groups",  :f => f, :edit => true
    = render "entities/permissions",  :f => f, :edit => true

    .buttonbar
      = f.submit t(:save_mandrill_email)
      #{t :or}
      = link_to_cancel edit_mandrill_email_path(@mandrill_email)
