#confirm{ hidden }
.title_tools#menu
  = link_to_inline(:edit_bundle, edit_bundle_path(@bundle), text: t(:edit)) + " | "
  = link_to_function(t(:delete) + '?', confirm_delete(@bundle))
.title_tools#buttons
  = view_buttons
.title#edit_bundle_title
  = h(@bundle.name)
  %small.text-muted.ms-2
