.standalone#standalone
  = simple_form_for(resource, as: resource_name, url: user_password_path(resource_name), html: { method: :post }) do |f|
    .title #{t :forgot_password}
    .intro #{t :password_intro}
    .section
      .label #{t :email}:
      = f.input :email, required: true, autofocus: true, label: false
    %br
    .buttonbar
      = f.button :submit, t(:reset_password), :id => "passwords_submit"
