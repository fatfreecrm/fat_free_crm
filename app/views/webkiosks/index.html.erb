<p id="notice"><%= notice %></p>

<h1 class="kiosk_heading">Listing Webkiosks</h1>

<table class="kiosk_display_table">
  <thead>
    <tr align="center">
      <th>Url</th>
      <th>Account</th>
      <th>Live</th>
      <th>Platform</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @webkiosks.each do |webkiosk| %>
      <tr align="center">
        <td><%= setup_tracker_link(webkiosk) %></td>
        <td><%= webkiosk.account.name %></td>
        <td><%= webkiosk.live %></td>
        <td><%= webkiosk.platform %></td>
        <td class="kiosk_notes"><%= webkiosk.notes %></td>
        <td><%= link_to 'Show', webkiosk %>
        <%= link_to 'Edit', edit_webkiosk_path(webkiosk) %>
        <%= link_to 'Destroy', webkiosk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

