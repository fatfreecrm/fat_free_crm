.remote
  - remote_form_for([:admin, @user]) do |f|
    = link_to_close edit_admin_user_path(@user)
    = f.error_messages
    = render :partial => "admin/users/profile", :locals => { :f => f, :edit => true }
    .buttonbar
      = f.submit "Save User"
      or
      = link_to_cancel edit_admin_user_path(@user)
