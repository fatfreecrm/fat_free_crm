page.call "crm.flick", :empty, :toggle
page.call "crm.hide_form", :options if called_from_index_page?
page.call "crm.flip_form", :create_event

unless params[:cancel].true?
  page[:create_event].replace_html :partial => "new"
  page.call "crm.init_chosen_fields"
  page.call "crm.set_title", :create_event, t(:create_event)
else
  page.call "crm.set_title", :create_event, t(:events)
end
