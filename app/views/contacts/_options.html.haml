%p
  = link_to_close options_contacts_path
  = hidden_field_tag "contact[user_id]", @current_user.id

  - current_sort_by = t("option_" + Contact.sort_by_map.invert[@sort_by])
  - current_outline = t("option_#{@outline}")
  - current_naming  = t("option_#{@naming}")

  -# sort_by_displaying: Sort {{models}} by {{field}} displaying first name {{position}} last name. 
  = t(:sort_by_displaying, :models => t(:contacts_small), :field => link_to(current_sort_by, "#", :id => :sort_by), :position => link_to(current_naming, "#", :id => :naming))

  -# show_per_page: Show {{number}} {{models}} per page using {{format}} format. 
  = t(:show_per_page, :number => link_to(@per_page, "#", :id => :per_page), :models => t(:contacts_small), :format => link_to(current_outline, "#", :id => :outline))

%p

%script
  = render :partial => "common/naming"
  = render :partial => "common/sort_by"
  = render :partial => "common/per_page"
  = render :partial => "common/outline"
