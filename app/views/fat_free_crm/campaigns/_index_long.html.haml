%li.highlight[campaign]
  .strip{class: campaign.status}= t(campaign.status)
  = render "fat_free_crm/campaigns/campaign_tools", campaign: campaign
  = link_to(campaign.name, campaign)
  = render "fat_free_crm/campaigns/status", campaign: campaign
  = render "fat_free_crm/campaigns/metrics", campaign: campaign
  - if campaign.tags.present?
    .tags= tags_for_index(campaign)
  = hook(:campaign_bottom, self, campaign: campaign)
