= simple_form_for(@campaign, html: one_submit_only, remote: true) do |f|
  = link_to_close new_campaign_path
  = f.hidden_field :user_id

  = f.error_messages object_name: t('campaign')

  = render "fat_free_crm/campaigns/top_section", f: f
  = render "fat_free_crm/fields/edit_custom_field_group", f: f
  = render "fat_free_crm/shared/add_comment", f: f
  = render "fat_free_crm/campaigns/objectives",  f: f
  = render "fat_free_crm/fields/groups",         f: f
  = render "fat_free_crm/entities/permissions",  f: f, entity: @campaign
  = hook(:entity_form, self, {f: f, entity: @campaign})

  .buttonbar
    = f.submit t(:create_campaign), :class => 'btn btn-primary'
    = link_to_cancel new_campaign_path, :class => 'btn btn-link'
