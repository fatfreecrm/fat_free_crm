.btn-group.btn-group-sm
  %button.btn{ class: (@view == "pending" ? "btn-dark" : "btn-light"), onclick: %Q(document.location.href='#{tasks_path}') }
    = t :pending_tab
  %button.btn{ class: (@view == "assigned" ? "btn-dark" : "btn-light"), onclick: %Q(document.location.href='#{url_for(action: :index, view: "assigned")}') }
    = t :assigned_tab
  %button.btn{ class: (@view == "completed" ? "btn-dark" : "btn-light"), onclick: %Q(document.location.href='#{url_for(action: :index, view: "completed")}') }
    = t :completed_tab
