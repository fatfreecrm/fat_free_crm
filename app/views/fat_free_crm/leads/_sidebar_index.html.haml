.filters#filters
  %h4.caption.heading= t :lead_statuses
  - Setting.lead_status.each do |key|
    .space-between
      .form-check
        = lead_status_checkbox(key, @lead_status_total[key])
        = label_tag(key, t(key), class: 'form-check-label')
      %div.status-total
        = @lead_status_total[key]

  .space-between
    .form-check
      = lead_status_checkbox("other", @lead_status_total[:other])
      = label_tag(:other, t(:other), class: 'form-check-label')
    %div.status-total
      = @lead_status_total[:other]

  .space-between
    %b #{t :total_leads}
    %div.status-total
      %b= @lead_status_total[:all]
  = hook(:index_lead_sidebar_bottom, self)
