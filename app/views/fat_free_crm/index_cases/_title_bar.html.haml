    = link_to_inline(:edit_index_case, edit_index_case_path(@index_case), text: t(:edit))
    = link_to_function(t(:delete), confirm_delete(@index_case))
  .title_tools#buttons
    = view_buttons

%div#edit_index_case{ hidden }
