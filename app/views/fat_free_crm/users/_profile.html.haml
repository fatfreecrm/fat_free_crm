.remote
  = form_for(@user, html: one_submit_only, remote: true) do |f|
    = link_to_close edit_user_path(@user)

    = f.error_messages object_name: t('user')

    .section
      .form-group
        %label #{t :first_name}:
        = f.text_field(:first_name, { class: 'form-control'})
      .form-group
        %label #{t :last_name}:
        = f.text_field(:last_name, { class: 'form-control'})
      .form-group
        %label #{t :job_title}:
        = f.text_field(:title, { class: 'form-control'})
      .form-group
        %label #{t :company}:
        = f.text_field(:company, { class: 'form-control'})
    .subtitle #{t :contact_info}
    .section
      .form-groupp
        %label.req #{t :email}:
        = f.text_field(:email, { class: 'form-control'})
      .form-groupp
        %label #{t :alt_email}:
        = f.text_field(:alt_email, { class: 'form-control'})
      .form-groupp
        %label #{t :phone}:
        = f.text_field(:phone, { class: 'form-control'})
      .form-groupp
        %label #{t :mobile}:
        = f.text_field(:mobile, { class: 'form-control'})
      .form-group
        %label #{t :aim}:
        = f.text_field(:aim, {class: 'form-control'})
      .form-group
        %label #{t :yahoo}:
        = f.text_field(:yahoo, {class: 'form-control'})
      .form-group
        %label #{t :google}:
        = f.text_field(:google, {class: 'form-control'})
      .form-group
        %label #{t :skype}:
        = f.text_field(:skype, {class: 'form-control'})

    .buttonbar
      = f.submit t(:save_profile), :class => 'btn btn-primary'
      = link_to_cancel edit_user_path(@user), :class => 'btn btn-link'

  = hook(:profile_user_bottom, self)
