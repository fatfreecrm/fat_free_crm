%details.idc-panel
  %summary
    =t(:extra_info)
  .detail-content
    %span
      %b= t(:title)
      %div= contact.title
    %span
      %b= t(:department)
      %div= contact.department
    %span
      %b= t(:alt_email)
      %div= contact.alt_email
    %span
      %b= t(:mobile)
      .phone-number= contact.mobile
    %span
      %b= t(:fax)
      %div= contact.fax
    %span
      %b= t(:do_not_call)
      %div= contact.do_not_call == false ? "no" : "yes"
    %span
      %b=t(:address) + ":"
      .address
        = render "fat_free_crm/shared/address_show", asset: contact, type: 'business', title: nil
    %span
      %b= t(:web_presence)
      %div= web_presence_icons(contact)
    %span
      %b= t(:permissions)
      %div=(contact.permissions.empty? ? t(:shared_with_everyone) : contact.permissions.join(", "))
    - if Setting.background_info && Setting.background_info.include?(:contact)
      %tr
        = col(t(:background_info), contact.background_info)
