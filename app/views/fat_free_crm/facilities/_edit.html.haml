.remote
  = simple_form_for(@facility, {url: admin_facility_path(@facility), html: one_submit_only, remote: true}) do |f|
    = link_to_close edit_admin_facility_path(@facility)
    = f.hidden_field :user_id

    = f.error_messages object_name: t('facility')

    = render "fat_free_crm/facilities/top_section",  f: f, edit: true
    /= render "fat_free_crm/contacts/extra",       f: f, edit: true
    = render "fat_free_crm/entities/permissions",  f: f, edit: true, entity: @facility
    = hook(:entity_form, self, {f: f, entity: @facility})

    .buttonbar
      - if Setting.compound_address
        = f.submit t(:save_facility), { onclick: "crm.clear_all_hints()", class: 'btn btn-primary'}
      - else
        = f.submit t(:save_facility), { class: 'btn btn-primary' }
      = link_to_cancel edit_admin_facility_path(@facility)
