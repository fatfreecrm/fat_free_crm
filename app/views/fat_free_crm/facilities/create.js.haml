- entity_name = 'facility'
- @entity = instance_variable_get("@#{entity_name}")
- create_id = "create_#{entity_name}" # create_facility

- if @entity.valid?
  $('##{create_id}_arrow').html(crm.COLLAPSED);
  $('##{create_id}_title').html('#{ j t(entity_name.pluralize) }');
  $('##{create_id}').slideUp(250);
  $('##{entity_name.pluralize}').prepend('#{ j render(partial: "fat_free_crm/facilities/#{entity_name}", collection: [ @entity ]) }');
  $('##{dom_id(@entity)}').effect("highlight", { duration:1500 });
  = refresh_sidebar(:index, :filters)
  $('#paginate').html('#{ j render(partial: "fat_free_crm/shared/paginate_with_per_page", locals: {path: "admin_facilities"}) }');
  crm.flick('empty', 'remove');
- else
  $('##{create_id}').html('#{ j render(partial: "fat_free_crm/facilities/new") }');
  $('##{create_id}').effect("shake", { duration:250, distance: 6 });
  $('#new_#{entity_name} input[type!=hidden]').first().focus();
