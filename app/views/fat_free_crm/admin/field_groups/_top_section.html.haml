.idc-panel
  = f.hidden_field :klass_name

  .form-group.full-width
    %label= t(:label) + ":"
    = f.text_field(:label, { class: 'form-control' })
  
  .form-group.one-half
    %label
      =t(:restrict_by_tag)
      %small= t(:restrict_by_tag_info, assets: f.object.klass_name.downcase.pluralize)
    = f.select(:tag_id, FatFreeCrm::Tag.all.map { |tag| [tag.name, tag.id] }, { include_blank: true }, { class: 'custom-select' })
