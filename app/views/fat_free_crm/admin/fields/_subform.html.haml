
= fields_for :field, @field do |f|
  - if (as = f.object.as).present? and lookup_context.exists? "#{as}_field", 'fat_free_crm/admin/custom_fields', true
    = render partial: "fat_free_crm/admin/custom_fields/#{as}_field", locals: {f: f}
  - else
    = render partial: "fat_free_crm/admin/custom_fields/base_field", locals: {f: f}
