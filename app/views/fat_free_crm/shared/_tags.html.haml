- asset = controller_name.singularize
.form-group.one-half
  %label= t(:tags) + ":"
  = f.select(:tag_list, FatFreeCrm::Tag.all.map{|t| t.name}, {}, {class: "custom-select form-control", data: {tags: true, url: url_for(action: 'field_group'), placeholder: t(:select_or_create_tags), multiple: true, asset_id: f.object.try(:id)}, multiple: true})
