= hook(:account_top_section, self, f: f) do
  .idc-panel
    .form-group.one-half
      %label.req #{t :name}:
      = f.text_field(:name, { autofocus: true, class: 'form-control' })
    .form-group.one-half
      %label #{t :assigned_to}:
      = user_select(:account, FatFreeCrm::User.without_user(current_user), current_user)
    .form-group.one-quarter
      %label #{t :category}:
      = f.select :category, Setting.unroll(:account_category), { selected: (@account.category || "other").to_sym, include_blank: t(:other) }, { class: 'form-control' }
    .form-group.one-quarter
      %label #{t :rating}:
      = rating_select "account[rating]", { id: :account_rating, selected: @account.rating, class: 'form-control' }

    - if Setting.background_info && Setting.background_info.include?(:account)
      .form-group.one-third
        %label= t(:background_info) + ':'
        = f.text_area(:background_info, {})

    = render partial: "/fat_free_crm/shared/tags", locals: {f: f, span: 3}

    = hook(:account_top_section_bottom, self, f: f)
