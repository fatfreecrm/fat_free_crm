- edit ||= false
- collapsed = session[:lead_presence].nil? # && @lead.errors.empty?
= subtitle :lead_presence, collapsed, t(:web_presence)
.idc-panel
  %small#lead_presence_intro.full-width{ hidden_if(!collapsed) }
    = t(:intro, t(:web_presence_small)) unless edit
  .idc-form-group#lead_presence{ hidden_if(collapsed) }
    .form-group.one-third
      %label #{t :blog}:
      = f.text_field(:blog, {class: 'form-control'})
    .form-group.one-third
      %label #{t :twitter}:
      = f.text_field(:twitter, {class: 'form-control'})
    .form-group.one-third
      %label #{t :linked_in}:
      = f.text_field(:linkedin, {class: 'form-control'})
    .form-group.one-half
      %label #{t :facebook}:
      = f.text_field(:facebook, {class: 'form-control'})
    .form-group.one-half
      %label #{t :skype}:
      = f.text_field(:skype, {class: 'form-control'})
        
        

