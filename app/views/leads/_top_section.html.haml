
= hook(:lead_top_section, self, f: f) do
  .section
    %table
      %tr
        %td
          .label.top{ class: "#{Setting.require_first_names ? 'req' : nil}" } #{t :first_name}:
          = f.text_field :first_name, autofocus: true
        %td= spacer
        %td
          .label.top{ class: "#{Setting.require_last_names ? 'req' : nil}" } #{t :last_name}:
          = f.text_field :last_name
      %tr
        %td
          .label #{t :email}:
          = f.text_field :email
        %td= spacer
        %td
          .label #{t :phone}:
          = f.text_field :phone

    %table
      = fields_for(@account) do |a|
        = a.hidden_field :user_id
        = a.hidden_field :assigned_to
        = a.hidden_field :access, value: Setting.default_access
        %tr
          %td
            != account_select_or_create(a) do |options|
              - # Add [-- None --] account choice when editing existing lead that has an account.
              - options[:include_blank] = "" unless @lead.new_record? || @lead.account.blank?

      - if Setting.background_info && Setting.background_info.include?(:lead)
        %tr
          %td(colspan="3")
            .label= t(:background_info) + ':'
            = f.text_area :background_info, style: "width:500px", rows: 3

      = render partial: "/shared/tags", locals: {f: f, span: 3}

      = hook(:lead_top_section_bottom, self, f: f)
