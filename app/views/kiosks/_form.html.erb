<%= simple_form_for @kiosk do |f| %>
  <%= f.error_messages %>

  <div class="kiosk_inputs_class">
    <br>
    <%= f.label :name, class: 'kiosk_labels' %>
    <%= f.input_field :name, class: 'kiosk_inputs', required: true %>
    <br>
    <br>
    <%= f.label :account_id, class: 'kiosk_labels' %>
    <%= f.select(:account_id, @accounts_list, {}, { class: 'kiosk_inputs' }) %>
    <br>
    <br>
    <%= f.label :purchase_date, class: 'kiosk_labels' %>
    <%= f.input_field :purchase_date, class: 'kiosk_inputs' %>
    <br>
    <br>
    <%= f.label :contract_id, class: 'kiosk_labels' %>
    <%= f.select(:contract_id, @contract_list, {}, { class: 'kiosk_inputs' }) %>
    <% #f.label :contract_id, class: 'kiosk_labels' %>
    <% #f.input_field :contract_type, class: 'kiosk_inputs' %>
    <br>
    <br>
    <%= f.label :contract_length, class: 'kiosk_labels' %>
    <%= f.input_field :contract_length, class: 'kiosk_inputs', min: 1 %>
    <br>
    <br>
    <%= f.label :password, class: 'kiosk_labels' %>
    <%= f.input_field :password, as: :string, class: 'kiosk_inputs', required: true %>
    <br>
    <br>
    <%= f.label 'CD Burn Code', class: 'kiosk_labels' %>
    <%= f.input_field :cd_password, as: :string, class: 'kiosk_inputs', required: true %>
    <br>
    <br>
    <%= f.label :notes, class: 'kiosk_labels' %>
    <%= f.input_field :notes, class: 'kiosk_inputs' %>
    <br>
    <br>
  </div>

  <div class="kiosk_actions_class">
    <%= f.button :submit %>
  </div>
<% end %>
