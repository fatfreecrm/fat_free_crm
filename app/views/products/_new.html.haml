= simple_form_for(@product, html: one_submit_only, remote: true) do |f|
  = link_to_close new_product_path
  = f.hidden_field :user_id

  = f.error_messages object_name: t('product')

  = render "products/top_section", f: f
  = render "fields/edit_custom_field_group", f: f
  = render "shared/add_comment",        f: f
  = render "fields/groups",             f: f
  = render "entities/permissions",      f: f, entity: @product
  = hook(:entity_form, self, {f: f, entity: @product})

  .buttonbar
    = f.submit t(:create_product), onclick: %//, class: 'btn btn-primary'
    #{t :or}
    = link_to_cancel new_product_path
