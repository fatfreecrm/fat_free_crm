#search
  .tabs
    %ul{ :class => "nav nav-tabs"}
      %li{ :class => "nav-item"}
        = link_to t('basic_search'), '#',    :"data-search-form" => "basic_search",    class: (params[:q]  ? "nav-link" : "nav-link active")
      %li{ :class => "nav-item"}
        = link_to t('advanced_search'), '#', :"data-search-form" => "advanced_search", class: (!params[:q] ? "nav-link" : "nav-link active")

    #search_results_count
      = t('search_results_count', count: @search_results_count)

  .search_form#basic_search{ style: (params[:q] ? 'display: none;' : '') }
    = render "basic_search"

  .search_form#advanced_search{ style: (!params[:q] ? 'display: none;' : '') }
    = ransack_ui_search remote: true
