- edit ||= false
- collapsed = session[:contact_group_permissions].nil? # && @contact_group.errors.empty?
= subtitle :contact_group_permissions, collapsed, t(:permissions)
.section
  %small#contact_group_permissions_intro{ hidden_if(!collapsed) }
    = get_default_permissions_intro(@contact_group.access, t(:contact_group_small)) unless edit
  #contact_group_permissions{ hidden_if(collapsed) }
    .radio_box
      = f.radio_button :access, "Private", :onclick => "$('people').hide()"
      = label "contact_group[access]", :private, t(:keep_private), :style => "cursor:pointer"
    .radio_box
      = f.radio_button :access, "Public", :onclick => "$('people').hide()"
      = label "contact_group[access]", :public, t(:make_public), :style => "cursor:pointer"
    .radio_box
      = f.radio_button :access, "Shared", :onclick => "$('people').show()"
      = label "contact_group[access]", :shared, t(:share_with), :style => "cursor:pointer"

    #people{ hidden_if(@contact_group.access != "Shared") }
      %div{ :style => "padding: 6px 0px 0px 20px" }
        - for user in @users
          .check_box
            -# Preserve state of the checkboxes if the form gets redrawn on errors.
            = check_box_tag "users[]", user.id, @contact_group.permissions.map(&:user_id).include?(user.id) || (params[:users] && params[:users].include?(user.id.to_s)), :id => "user_#{user.id}"
            = label_tag "user_#{user.id}", h(user.full_name), :style => "cursor:pointer"
